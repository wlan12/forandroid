<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenuActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/imageAddMenuBack"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ADMIN"
            android:textSize="25dp"
            android:paddingRight="40dp"
            android:fontFamily="@font/font_b"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageMenu"
            android:src="@drawable/ready"
            android:background="@drawable/navigation_shape"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메뉴 ID"
            android:id="@+id/editMenuID"
            android:paddingBottom="25dp"
            android:fontFamily="@font/font_b"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메뉴 이름"
            android:id="@+id/editMenuName"
            android:paddingBottom="25dp"
            android:fontFamily="@font/font_b"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메뉴 가격"
            android:id="@+id/editMenuPrice"
            android:paddingBottom="25dp"
            android:fontFamily="@font/font_b"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메뉴 설명"
            android:id="@+id/editMenuInfo"
            android:paddingBottom="25dp"
            android:fontFamily="@font/font_b"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메뉴 용량"
            android:id="@+id/editMenuSize"
            android:paddingBottom="25dp"
            android:fontFamily="@font/font_b"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메뉴 구성"
            android:id="@+id/editMenuCon"
            android:paddingBottom="25dp"
            android:fontFamily="@font/font_b"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:padding="15dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:textColor="@color/black"
            android:background="#00ff0000"
            android:layout_weight="1"
            android:id="@+id/btnMenuInsert"
            android:textSize="15dp"
            android:fontFamily="@font/font_b"/>
    </LinearLayout>

</LinearLayout>