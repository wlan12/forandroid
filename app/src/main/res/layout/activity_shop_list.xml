<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopListActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="음식점"
            android:textSize="25dp"
            android:paddingRight="40dp"
            android:fontFamily="@font/font_b"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_back"
            android:text="전체"
            android:id="@+id/btnAll"
            android:layout_weight="1"
            android:fontFamily="@font/font_b"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_back"
            android:text="한식"
            android:id="@+id/btnKorean"
            android:layout_weight="1"
            android:fontFamily="@font/font_b"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_back"
            android:text="분식"
            android:id="@+id/btnSnack"
            android:layout_weight="1"
            android:fontFamily="@font/font_b"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_back"
            android:text="일식"
            android:id="@+id/btnJapanese"
            android:layout_weight="1"
            android:fontFamily="@font/font_b"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/button_back"
            android:text="중식"
            android:id="@+id/btnChinese"
            android:layout_weight="1"
            android:fontFamily="@font/font_b"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:textColor="@color/black"
            android:text="야식"
            android:id="@+id/btnMidnight"
            android:layout_weight="1"
            android:fontFamily="@font/font_b"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_shopList"
            tools:listitem="@layout/shop_list_item"/>
    </LinearLayout>

</LinearLayout>